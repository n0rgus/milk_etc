{
  "manifest_version": 3,
  "name": "PriceWatch Woolies Capture",
  "version": "0.1.0",
  "description": "Navigates to next Woolworths product page, reads price, posts to local PriceWatch app.",
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://www.woolworths.com.au/*",
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Run Woolies Capture"
  },
  "content_scripts": [
    {
      "matches": ["https://www.woolworths.com.au/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
